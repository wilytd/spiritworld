# Aegis Mesh Environment Configuration
# Copy this file to .env and configure your values

# Email/SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_ADDRESS=aegis@example.com
SMTP_USE_TLS=true

# Webhook notifications (Slack, Discord, etc.)
WEBHOOK_URL=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Scheduler Configuration
SCHEDULER_DUE_WARNING_HOURS=24
SCHEDULER_OVERDUE_CHECK_INTERVAL=3600
SCHEDULER_SNOOZE_CHECK_INTERVAL=300

# OPNsense firewall integration
OPNSENSE_URL=https://192.168.1.1
OPNSENSE_KEY=your_api_key
OPNSENSE_SECRET=your_api_secret
OPNSENSE_VERIFY_SSL=false

# Unifi controller integration
UNIFI_URL=https://192.168.1.1:8443
UNIFI_USER=admin
UNIFI_PASS=your_password
UNIFI_SITE=default
UNIFI_VERIFY_SSL=false

# Pi-hole integration
PIHOLE_URL=http://192.168.1.10
PIHOLE_TOKEN=your_api_token

# AdGuard Home integration (alternative to Pi-hole)
ADGUARD_URL=http://192.168.1.11
ADGUARD_USER=admin
ADGUARD_PASS=your_password

# Meshtastic device path (adjust for your system)
MESH_DEVICE_PATH=/dev/ttyUSB0

# Plugin System Configuration
PLUGINS_ENABLED=true
PLUGINS_DIR=./plugins
PLUGINS_AUTO_DISCOVER=true
PLUGINS_ENABLED_LIST=
PLUGINS_DISABLED_LIST=

# LLM Configuration
LLM_ENABLED=true
LLM_PROVIDER_PRIORITY=ollama,openai,anthropic
LLM_ENABLE_ANALYSIS=true
LLM_ANALYSIS_SCHEDULE=0 6 * * *

# Ollama (local LLM - priority)
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=120.0

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=60.0
OPENAI_MAX_TOKENS=2048

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_TIMEOUT=60.0
ANTHROPIC_MAX_TOKENS=2048
