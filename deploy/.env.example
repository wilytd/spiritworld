# Aegis Mesh Environment Configuration
# Copy this file to .env and configure your values

# Email/SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_ADDRESS=aegis@example.com
SMTP_USE_TLS=true

# Webhook notifications (Slack, Discord, etc.)
WEBHOOK_URL=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Scheduler Configuration
SCHEDULER_DUE_WARNING_HOURS=24
SCHEDULER_OVERDUE_CHECK_INTERVAL=3600
SCHEDULER_SNOOZE_CHECK_INTERVAL=300

# OPNsense firewall integration
OPNSENSE_URL=https://192.168.1.1
OPNSENSE_KEY=your_api_key
OPNSENSE_SECRET=your_api_secret
OPNSENSE_VERIFY_SSL=false

# Unifi controller integration
UNIFI_URL=https://192.168.1.1:8443
UNIFI_USER=admin
UNIFI_PASS=your_password
UNIFI_SITE=default
UNIFI_VERIFY_SSL=false

# Pi-hole integration
PIHOLE_URL=http://192.168.1.10
PIHOLE_TOKEN=your_api_token

# AdGuard Home integration (alternative to Pi-hole)
ADGUARD_URL=http://192.168.1.11
ADGUARD_USER=admin
ADGUARD_PASS=your_password

# Meshtastic device path (adjust for your system)
MESH_DEVICE_PATH=/dev/ttyUSB0
